meta {
  name: Comment Out of Bound
  type: http
  seq: 6
}

post {
  url: {{base_url}}/api/reviews
  body: json
  auth: inherit
}

body:json {
  {
    "bookingId": "{{bookingId}}",
    "rating": 5,
    "comment": "
  ",
    "tags": ["ON_TIME"]
  }
}

tests {
  // Parse body
  const body = res.getBody();
  const json = typeof body === "string" ? JSON.parse(body) : body;
  
  test("Status code ต้องเป็น 200 (0K)", () => {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("ต้องมีค่า reviewId (id ต้องเป็น string และไม่ว่าง)", () => {
    expect(json).to.have.property("id");
    expect(json.id).to.be.a("string");
    expect(json.id).to.not.be.empty;
  });
  
  
}

settings {
  encodeUrl: true
  timeout: 0
}
