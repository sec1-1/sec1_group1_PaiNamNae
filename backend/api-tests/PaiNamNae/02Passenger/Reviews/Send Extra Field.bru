meta {
  name: Send Extra Field
  type: http
  seq: 7
}

post {
  url: {{base_url}}/api/reviews
  body: json
  auth: inherit
}

body:json {
  {
    "bookingId": "{{bookingId}}",
    "rating": 5,
    "comment": "im try to send extra field",
    "tags": ["ON_TIME"],
    "extra":"xxx"
  }
}

tests {
  // Parse body
  const body = res.getBody();
  const json = typeof body === "string" ? JSON.parse(body) : body;
  
  test("Status code ต้องเป็น 200 (OK)", () => {
    expect(res.getStatus()).to.equal(200);
  });
  
  //ใช้ id เช็คว่ารีวิวถูกสร้างหรือยัง 
  test("ต้องมีค่า reviewId (id ต้องเป็น string และไม่ว่าง)", () => {
    expect(json).to.have.property("id");
    expect(json.id).to.not.be.empty;
  });
  
  // field หลักอยู่ครบ
  test("Response have (bookingId, rating, comment, tags)", () => {
    expect(json).to.have.property("bookingId");
    expect(json).to.have.property("rating");
    expect(json).to.have.property("comment");
    expect(json).to.have.property("tags");
  });
  
  // ค่าใน field หลักไม่เปลี่ยน
  test("Response should match input", () => {
    expect(json.rating).to.equal(5);
    expect(json.comment).to.equal("im try to send extra field");
    expect(json.tags).to.deep.equal(["ON_TIME"]);
  });
  
}

settings {
  encodeUrl: true
  timeout: 0
}
