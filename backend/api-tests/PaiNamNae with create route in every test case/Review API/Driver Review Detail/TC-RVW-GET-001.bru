meta {
  name: TC-RVW-GET-001
  type: http
  seq: 1
}

get {
  url: {{base_url}}/api/reviews/driver/{{driver_id}}
  body: none
  auth: inherit
}

tests {
  const json = res.getBody();
  
  test("Status code ต้องเป็น 200", () => {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response ต้องเป็น array", () => {
    expect(json).to.be.an("array");
  });
  
  test("จำนวน review ต้องมากกว่าหรือเท่ากับ 1", () => {
    expect(json.length).to.be.at.least(1);
  });
  
  test("review ทุกตัวต้องมี rating", () => {
    json.forEach((rvw) => {
      expect(rvw).to.have.property("rating");
      expect(rvw.rating).to.not.be.null;
    });
  });
  
  
}

settings {
  encodeUrl: true
  timeout: 0
}
