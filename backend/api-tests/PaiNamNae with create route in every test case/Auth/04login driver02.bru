meta {
  name: 04login driver02
  type: http
  seq: 5
}

post {
  url: {{base_url}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "username": "{{driver02_username}}",
    "password": "{{driver02_password}}"
  }
  
}

script:post-response {
  const body = res.getBody();
  const json = typeof body === "string" ? JSON.parse(body) : body;
  bru.setEnvVar("driver2_token", json.data.token);
}

tests {
  const body = res.getBody();
  const json = typeof body === "string" ? JSON.parse(body) : body;
  
  test("Login driver: status 200", () => {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("ต้องได้ token", () => {
    expect(json.data.token).to.be.a("string");
  });
  
  bru.setEnvVar("driver2_id", json.data.user.id);
  
}

settings {
  encodeUrl: true
  timeout: 0
}
